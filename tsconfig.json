{
    "compilerOptions": {
        "target": "ES2018",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "inlineSourceMap": true,
        "jsx": "react",
        "baseUrl": ".",
        "lib": ["dom", "dom.iterable", "ESNext"]
    },
    "include": ["src"]
}
